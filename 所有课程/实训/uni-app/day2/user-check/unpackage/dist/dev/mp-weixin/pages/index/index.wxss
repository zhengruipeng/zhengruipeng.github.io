page {
  background-color: #eee;
  height: 100%;
}
.content {
  box-sizing: border-box;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  height: 100%;
}
.user-info {
  display: flex;
  align-items: center;
  background-color: #fff;
  padding: 20rpx 30rpx;
  border-radius: 12rpx;
}
.user-info .icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 100%;
  background-color: #2979FF;
  color: #fff;
  line-height: 100rpx;
  text-align: center;
  margin-right: 30rpx;
}
.user-info .info .name {
  font-size: 40rpx;
}
.user-info .info .dept {
  font-size: 28rpx;
  color: #aaa;
}
.check-info {
  flex-grow: 1;
  margin-top: 30rpx;
  background-color: #fff;
  padding: 20rpx 30rpx;
  border-radius: 12rpx;
}
.check-info .check-record {
  display: flex;
}
.check-info .check-record .item {
  flex-grow: 1;
  background: #eee;
  margin: 0rpx 10rpx;
  border-radius: 9rpx;
  padding: 10rpx 15rpx;
}
.check-info .check-record .item .info {
  font-size: 24rpx;
  color: #999;
}
.check-info .check-btn .check-circle {
  background-color: #2B85E4;
  color: #fff;
  width: 270rpx;
  height: 270rpx;
  border-radius: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0rpx 10rpx 30rpx 0rpx rgba(0, 50, 180, 0.6);
  margin: auto;
  margin-top: 30rpx;
}
.check-info .check-btn .check-circle .title {
  font-size: 40rpx;
  font-weight: bold;
}
.check-info .check-btn .check-circle .time {
  opacity: 0.5;
}
.check-info .check-btn .location {
  color: #666;
  font-size: 24rpx;
  text-align: center;
  margin-top: 30rpx;
}

