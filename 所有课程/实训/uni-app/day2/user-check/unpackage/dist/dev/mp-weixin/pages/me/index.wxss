.info-container {
  position: relative;
}
.info-container .bg {
  width: 100%;
  height: 300rpx;
}
.info-container .info {
  position: absolute;
  display: flex;
  align-items: center;
  top: 90rpx;
  left: 0rpx;
  padding: 0rpx 100rpx;
}
.info-container .info .face {
  width: 80rpx;
  height: 80rpx;
  object-fit: cover;
  border-radius: 100%;
  margin: 20rpx;
}
.info-container .info .nickname {
  color: #fff;
  font-weight: bold;
}
.info-container .logout {
  position: absolute;
  right: 10rpx;
  top: 10rpx;
}

